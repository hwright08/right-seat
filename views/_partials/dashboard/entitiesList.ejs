



<div class="card shadow-sm h-100 mt-4" style="max-height: 500px; overflow-y: auto;">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
      <strong>Accounts / Groups</strong>
      <div class="d-flex gap-2">
        <form class="input-group input-group-sm" style="max-width:300px" method="GET" action="/dashboard">
          <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
          <input class="form-control" id="entity" name="entity" placeholder="Search...">
          <button class="btn btn-sm btn-outline-secondary text-nowrap" type="submit">
            Search
          </button>
        </form>
        <!-- <a class="btn btn-sm btn-outline-secondary text-nowrap" href="/entity/create">
          <i class="bi bi-plus"></i>
          New Entity
        </a> -->
      </div>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table align-middle">
          <thead class="small text-secondary">
            <tr>
              <th>Name</th>
              <th>CFIs</th>
              <th>Students</th>
              <th>Subscription</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% entities?.forEach(entity=> { %>
              <tr>
                <td>
                  <%= entity.name %>
                </td>
                <td>
                  <%= entity.cfiCount ?? 0 %>
                </td>
                <td>
                  <%= entity.studentCount ?? 0 %>
                </td>
                <td>
                  <span
                    class="badge border <%= entity.subscription?.key == 'global' ? 'bg-purple-200 text-purple-500' : entity.subscription?.key == 'school' ? 'bg-success-subtle text-success' : entity.subscription?.key == 'single' ? 'bg-blue-200 text-blue-900' : 'bg-warning-subtle text-orange-500' %>">
                    <%= entity.subscription?.label %>
                  </span>
                </td>
                <td class="text-end">
                  <a class="btn btn-sm btn-outline-secondary" href="/entity/<%= entity.id %>">Manage</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const urlParams = new URLSearchParams(window.location.search);
      const entitySearch = urlParams.get('entity');
      if (entitySearch) {
        const entityField = document.getElementById('entity');
        entityField.value = entitySearch;
      }
    });
  </script>
