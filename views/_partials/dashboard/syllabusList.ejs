
<div class="card shadow-sm">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
              <strong>Syllabuses</strong>
              <div class="d-flex gap-2">
                <!-- <button class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#uploadModal">
                              <i class="bi bi-upload me-2"></i>
                              Upload
                            </button> -->
                <a class="btn btn-sm btn-outline-secondary" href="/syllabus/create?entityId=<%= currentEntity.id %>">
                  <i class="bi bi-file-earmark-text me-2"></i>
                  New Syllabus
                </a>
              </div>
            </div>
            <div class="card-body">
              <table class="table align-middle">
                <thead class="small text-secondary">
                  <tr>
                    <th>Rating</th>
                    <th>Title</th>
                    <th>Version</th>
                    <th>Lessons</th>
                    <th>Last Updated</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                  <% syllabi.forEach(syllabus=> { %>
                    <tr>
                      <td>
                        <%= syllabus.rating.label %>
                      </td>
                      <td>
                        <%= syllabus.title %>
                      </td>
                      <td>
                        <%= syllabus.version %>
                      </td>
                      <td>
                        <%= syllabus.lessons.length %>
                      </td>
                      <td>
                        <%= syllabus.updatedAt %>
                      </td>
                      <td class="text-end">
                        <a href="/syllabus/<%= syllabus.id %>"
                          class="btn btn-sm btn-outline-secondary">Manage</a>
                      </td>
                    </tr>
                    <% }) %>
                </tbody>
              </table>
            </div>
          </div>
