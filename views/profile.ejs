<!-- Header: CFI Profile + Actions -->
<div class="card shadow-sm mb-4">
  <div class="card-body d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-3">
    <div class="d-flex align-items-center gap-3">
      <div>
        <h4 class="mb-0"><%= profile.fullName %></h4>
        <div class="small text-secondary"><%= profile.email %></div>
        <div class="mt-1">
          <% if (!profile.inactiveDate) { %>
            <span class="badge bg-success-subtle text-success border me-2">Active</span>
            <% } else { %>
              <span class="badge bg-secondary">Inactive</span>
          <% } %>

          <% if (profile.hasGoldSeal) { %>
            <span class="badge text-secondary badge-outline me-2"><i class="bi bi-star-fill me-1"></i>Gold Seal</span>
          <% } %>
        </div>
      </div>
    </div>
    <div class="d-flex flex-wrap gap-2">
      <a href="/entity/<%= currentEntity.id %>/user/<%= profile.id %>/update?type=<%= profile.privilege.name %>" class="btn btn-outline-secondary">
        <i class="bi bi-pencil-square me-2"></i>Edit
      </a>
      <% if (profile.inactiveDate) { %>
        <form method="POST" action="/entity/<%= currentEntity.id %>/user/<%= profile.id %>/reactivate">
          <button type="submit" class="btn btn-outline-success">
            <i class="bi bi-person-plus me-2"></i>Reactivate
          </button>
        </form>
      <% } else { %>
        <form method="POST" action="/entity/<%= currentEntity.id %>/user/<%= profile.id %>/deactivate">
          <button type="submit" class="btn btn-outline-danger">
            <i class="bi bi-person-dash me-2"></i>Deactivate
          </button>
        </form>
      <% } %>
    </div>
  </div>
</div>

<!-- KPI Row -->
 <% if (profile.privilege.name != 'student') { %>
  <div class="row g-3 mb-3">
    <div class="col-6 col-xl-4">
      <div class="card hero-shadow h-100">
        <div class="card-body">
          <div class="text-secondary small">Assigned Students</div>
          <div class="fs-2 fw-bold"><%= students.length %></div>
        </div>
      </div>
    </div>
    <div class="col-6 col-xl-4">
      <div class="card hero-shadow h-100">
        <div class="card-body">
          <div class="text-secondary small">First-Time Pass</div>
          <div class="fs-2 fw-bold">82%</div>
          <div class="small text-secondary">Rolling 12 months</div>
        </div>
      </div>
    </div>
    <div class="col-6 col-xl-4">
      <div class="card hero-shadow h-100">
        <div class="card-body">
          <div class="text-secondary small">Avg Progress</div>
          <div class="d-flex align-items-center gap-2">
            <div class="fs-2 fw-bold text-success">68%</div>
          </div>
          <div class="progress small mt-2">
            <div class="progress-bar bg-success" style="width:68%"></div>
          </div>
        </div>
      </div>
    </div>
  </div>

 <% } %>

<!-- Tabs -->
<ul class="nav nav-tabs" id="cfiTabs" role="tablist">
  <% if (profile.privilege.name != 'student') { %>
    <li class="nav-item" role="presentation">
      <button class="nav-link <%= (profile.privilege.name != 'student') ? 'active' : ''%>" id="students-tab" data-bs-toggle="tab" data-bs-target="#students" type="button"
        role="tab">Students</button>
    </li>
  <% } else { %>
    <li class="nav-item" role="presentation">
      <button class="nav-link <%= (profile.privilege.name != 'student') ? '' : 'active'%>" id="students-tab"
        data-bs-toggle="tab" data-bs-target="#lessons" type="button" role="tab">Lessons</button>
    </li>
  <% } %>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="certs-tab" data-bs-toggle="tab" data-bs-target="#certs" type="button"
      role="tab">Ratings / Certificates</button>
  </li>
</ul>

<div class="tab-content pt-3">
  <!-- Students -->
   <% if (profile.privilege.name != 'student') { %>
    <div class="tab-pane fade show active" id="students" role="tabpanel">
      <div class="card shadow-sm">
        <div class="card-header bg-white d-flex align-items-center justify-content-between">
          <strong>Students (<%= students.length %>)</strong>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table align-middle">
              <thead class="small text-secondary">
                <tr>
                  <th>Student</th>
                  <th>Current Syllabus</th>
                  <th>Progress</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% students.forEach(student => { %>
                  <tr>
                    <td><%= student.fullName %></td>
                    <td><%= student.syllabus?.title %></td>
                    <td style="width:180px">
                      <% if (student.syllabus) { %>
                        <div class="progress small">
                          <div class="progress-bar bg-success" style="width:40%"></div>
                        </div>
                        <div class="small text-secondary mt-1">8 / 20</div>
                      <% } else { %>
                        N/a
                      <% } %>
                    </td>
                    <td class="text-end">
                      <div class="btn-group btn-group-sm">
                        <a class="btn btn-outline-secondary" href="#">View</a>
                      </div>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
   <% } else { %>
   <% } %>

  <!-- Certifications -->
  <div class="tab-pane fade" id="certs" role="tabpanel">
    <div class="card shadow-sm">
      <div class="card-header bg-white d-flex align-items-center justify-content-between">
        <strong>Ratings / Certifications</strong>
      </div>
      <div class="card-body">
        <ul class="list-group list-group-flush">
          <% profile.ratings.forEach(rating => { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= rating.label %>
            </li>
          <% }) %>
        </ul>
      </div>
    </div>
  </div>
</div>

<!-- Toast -->
<div class="position-fixed bottom-0 end-0 p-3" style="z-index:1080">
  <div id="toast" class="toast align-items-center text-bg-success border-0" role="alert">
    <div class="d-flex">
      <div class="toast-body">Saved successfully.</div>
      <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
    </div>
  </div>
</div>


<script>
  const toast = new bootstrap.Toast(document.getElementById('toast'), { delay: 2200 });
</script>
