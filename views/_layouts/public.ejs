<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>RightSeat â€” Flight Training Management</title>

  <!-- Bootstrap 5.3 CSS & Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

  <!-- Brand palette (optional) -->
  <style>
    :root {
      --rs-primary: #0284C7;
      /* sky blue */
      --rs-primary-100: #E0F2FE;
      --rs-secondary: #1E3A8A;
      /* navy */
      --rs-slate: #334155;
      --rs-emerald: #059669;
      --rs-amber: #F59E0B;
      --rs-danger: #DC2626;
    }

    .bg-rs-primary {
      background-color: var(--rs-primary) !important;
    }

    .text-rs-primary {
      color: var(--rs-primary) !important;
    }

    .btn-rs {
      background-color: var(--rs-primary);
      border-color: var(--rs-primary);
      color: white;
    }

    .btn-rs:hover {
      background-color: #0272ab;
      border-color: #0272ab;
      color: var(--rs-primary-100);
    }

    .link-rs {
      color: var(--rs-primary);
    }

    .hero {
      background: linear-gradient(180deg, var(--rs-primary-100), #fff);
    }

    .rs-badge {
      background: var(--rs-primary-100);
      color: var(--rs-secondary);
      border: 1px solid rgba(30, 58, 138, .12);
    }

    .is-invalid { border-color: #dc3545 !important; }
  </style>
</head>

<body class="bg-light d-flex flex-column min-vh-100">
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg bg-white border-bottom sticky-top">
    <div class="container">
      <a class="navbar-brand fw-bold d-flex align-items-center gap-2" href="/">
        <span class="badge rounded-circle bg-rs-primary">RS</span>
        <span class="text-rs-primary">RightSeat</span>
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div id="nav" class="collapse navbar-collapse">
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-lg-center">
          <li class="nav-item"><a class="nav-link" href="/#features">Features</a></li>
          <li class="nav-item"><a class="nav-link" href="/#how">How it works</a></li>
          <li class="nav-item"><a class="nav-link" href="/#pricing">Pricing</a></li>
          <li class="nav-item"><a class="nav-link" href="/#faq">FAQ</a></li>
          <li class="nav-item ms-lg-3"><a class="btn btn-outline-secondary" href="/login">Log in</a></li>
          <li class="nav-item ms-2"><a class="btn btn-rs" href="/sign-up">Start free trial</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <main class="flex-grow-1">
    <div class="container-fluid p-3 p-lg-4">
      <% if (errors?.length) { %>
        <div class="alert alert-danger d-flex align-items-center gap-2 mt-3">
          <i class="bi bi-info-circle"></i>
          <div class="small">
            <ul>
              <% errors.forEach(error=> { %>
                <li>
                  <%= error.msg %>
                </li>
                <% }) %>
            </ul>
          </div>
        </div>
        <% } %>
      <%- body %>
    </div>
  </main>

    <!-- Footer -->
    <%- include('../_partials/footer.ejs') %>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <%- script %>
</body>

</html>
