<template id="lessonTemplate">
  <div class="card lesson-card shadow-sm">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="h6 mb-0 lesson-label">Lesson</h3>
        <button type="button" class="btn btn-sm btn-outline-danger remove-lesson-btn">
          <i class="bi bi-trash"></i>
        </button>
      </div>
      <div class="row g-3">
        <div class="col-md-6">
          <label class="form-label lesson-title-label">Lesson Title</label>
          <input type="text" class="form-control lesson-title" placeholder="e.g., Preflight Inspection" required>
        </div>
        <div class="col-md-6">
          <label class="form-label lesson-summary-label">Lesson Summary</label>
          <input type="text" class="form-control lesson-summary" placeholder="Short overview">
        </div>
        <div class="col-12">
          <label class="form-label lesson-content-label">Lesson Content</label>
          <textarea class="form-control lesson-content" rows="5" placeholder="Full lesson description"></textarea>
        </div>
      </div>
    </div>
  </div>
</template>

<script>
  const lessonList = document.getElementById('lessonList');
  const lessonTemplate = document.getElementById('lessonTemplate');
  const addLessonBtn = document.getElementById('addLessonBtn');

  let lessonCount = 0;

  function addLesson() {
    const clone = lessonTemplate.content.cloneNode(true);
    const card = clone.querySelector('.lesson-card');

    // Update names for inputs
    const lessonIdent = `lessons[${lessonCount}]`;
    card.querySelector('.lesson-title').name = `${lessonIdent}[title]`;
    card.querySelector('.lesson-summary').name = `${lessonIdent}[summary]`;
    card.querySelector('.lesson-content').name = `${lessonIdent}[content]`;

    // Update Ids for accessibility
    card.querySelector('.lesson-title').id = `${lessonIdent}[title]`;
    card.querySelector('.lesson-summary').id = `${lessonIdent}[summary]`;
    card.querySelector('.lesson-content').id = `${lessonIdent}[content]`;

    card.querySelector('.lesson-title-label').setAttribute('for', `${lessonIdent}[title]`);
    card.querySelector('.lesson-summary-label').setAttribute('for', `${lessonIdent}[summary]`);
    card.querySelector('.lesson-content-label').setAttribute('for', `${lessonIdent}[content]`);

    card.querySelector('.lesson-label').textContent = `Lesson ${lessonCount + 1}`;

    // Remove button
    card.querySelector('.remove-lesson-btn').addEventListener('click', () => {
      card.remove();
      updateLessonLabels();
    });

    lessonList.appendChild(card);
    lessonCount++;
  }

  function updateLessonLabels() {
    [...lessonList.children].forEach((card, index) => {
      card.querySelector('.lesson-label').textContent = `Lesson ${index + 1}`;
    });
  }

  addLessonBtn.addEventListener('click', addLesson);

  if (lessonCount == 0) addLesson();
</script>
