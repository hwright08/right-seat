<h1 class="h3 fw-bold mb-4 d-flex align-items-center gap-2">
  <i class="bi bi-journal-text text-primary"></i> Create New Syllabus
</h1>

<%- include('./_partials/errorAlert') %>

<form action="/entity/<%= entityId %>/syllabus" method="POST" id="syllabusForm">
  <!-- Syllabus Details -->
  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <div class="row g-3">
        <div class="col-md-6">
          <label class="form-label fw-semibold" for="title">Syllabus Title</label>
          <input type="text" name="title" class="form-control" placeholder="e.g., Private Pilot Part 61" required id="title">
        </div>
        <div class="col-md-3">
          <label class="form-label fw-semibold" for="version">Version</label>
          <input type="number" step="0.01" min="0.1" name="version" class="form-control" placeholder="e.g., 1.0" required id="version">
        </div>
        <div class="col-md-3">
          <label class="form-label fw-semibold" for="ratingId">Rating</label>
          <select name="ratingId" class="form-select" required id="ratingId">
            <option value="">— Select —</option>
            <% ratings.forEach(rating=> { %>
              <option value="<%= rating.id %>">
                <%= rating.label %>
              </option>
              <% }) %>
          </select>
        </div>
      </div>
    </div>
  </div>

  <!-- Lessons -->
  <div class="d-flex justify-content-between align-items-center mb-2">
    <h2 class="h5 mb-0">Lessons</h2>
    <button type="button" class="btn btn-sm btn-primary" id="addLessonBtn">
      <i class="bi bi-plus-lg"></i> Add Lesson
    </button>
  </div>

  <div id="lessonList" class="d-flex flex-column gap-3 mb-4">
    <!-- Lesson items will be appended here -->
  </div>

  <div class="text-end">
    <button type="submit" class="btn btn-success btn-lg">
      <i class="bi bi-check-lg me-1"></i> Save Syllabus
    </button>
  </div>
</form>
</div>

