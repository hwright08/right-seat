<header class="hero py-5 bg-white border-bottom mb-3">
  <div class="container text-center">
    <h1 class="fw-bold">Contact Us</h1>
    <p class="text-secondary mb-0">
      Get in touch with our team — whether you have a sales question or need support.</p>
  </div>
</header>

<%- include('../_partials/errorAlert') %>

<div class="row g-4">
  <!-- Sales Inquiry -->
  <div class="col-md-6">
    <div class="card shadow-sm h-100">
      <div class="card-body">
        <h2 class="h5 fw-bold mb-3">
          <i class="bi bi-building me-2"></i>
          Sales Inquiry
        </h2>
        <form method="POST" action="/message">
          <input type="hidden" value="sales" name="type"/>
          <div class="mb-3">
            <label class="form-label" for="orgName">Organization</label>
            <input id="orgName" class="form-control" placeholder="e.g., Skyline Flight Center" name="orgName" value="<%= data?.orgName %>">
            <div class="small text-danger">
              <% fieldError = errors.find(err => err.path === 'orgNameRequiredForSales') %>
              <%= data?.type === 'sales' ? fieldError?.msg : '' %>
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="contactName">Name</label>
            <input class="form-control" placeholder="Your name" id="contactName" name="contactName" value="<%= data?.contactName %>">
            <div class="small text-danger">
              <% fieldError=errors.find(err=> err.path === 'contactName') %>
                <%= data?.type === 'sales' ? fieldError?.msg : '' %>
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="email">Email</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="you@example.com" value="<%= data?.email %>">
            <div class="small text-danger">
              <% fieldError=errors.find(err=> err.path === 'email') %>
                <%= data?.type === 'sales' ? fieldError?.msg : '' %>
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="message">Message</label>
            <textarea class="form-control" rows="3" id="message" name="message" placeholder="Tell us about your organization..."><%= data?.message %></textarea>
            <div class="small text-danger">
              <% fieldError=errors.find(err=> err.path === 'message') %>
                <%= data?.type === 'sales' ? fieldError?.msg : '' %>
            </div>
          </div>
          <button type="submit" class="btn btn-rs w-100">Contact Sales</button>
        </form>
      </div>
    </div>
  </div>

  <!-- General Support -->
  <div class="col-md-6">
    <div class="card shadow-sm h-100">
      <div class="card-body">
        <h2 class="h5 fw-bold mb-3"><i class="bi bi-life-preserver me-2"></i>General Support</h2>
        <form method="POST" action="/message">
          <input type="hidden" value="general" name="type" />
          <div class="mb-3">
            <label class="form-label" for="name">Name</label>
            <input class="form-control" placeholder="Your name" id="name" name="contactName" value="<%= data?.contactName %>">
            <div class="small text-danger">
              <% fieldError=errors.find(err=> err.path === 'contactName') %>
              <%= data?.type==='general' ? fieldError?.msg : '' %>
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="email">Email</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="you@example.com" value="<%= data?.email %>">
            <div class="small text-danger">
              <% fieldError=errors.find(err=> err.path === 'email') %>
              <%= data?.type==='general' ? fieldError?.msg : '' %>
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="message">How can we help?</label>
            <textarea class="form-control" rows="3" id="message" name="message" placeholder="Describe your issue or question"><%= data?.message %></textarea>
            <div class="small text-danger">
              <% fieldError=errors.find(err=> err.path === 'message') %>
              <%= data?.type==='general' ? fieldError?.msg : '' %>
            </div>
          </div>
          <button type="submit" class="btn btn-outline-secondary w-100">Submit Request</button>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Contact Info / Map -->
<div class="row mt-5">
  <div class="col-md-6">
    <h3 class="h5 fw-bold mb-3">Other ways to reach us</h3>
    <ul class="list-unstyled">
      <li class="mb-2">
        <i class="bi bi-envelope me-2 text-rs-primary"></i>
        <a href="mailto:support@rightseat.com">support@rightseat.com</a>
      </li>
      <li class="mb-2">
        <i class="bi bi-telephone me-2 text-rs-primary"></i>
        +1 (800) 000-0000
      </li>
      <li class="mb-2">
        <i class="bi bi-clock me-2 text-rs-primary"></i>Mon–Fri, 8:00 AM – 6:00 PM (MST)
      </li>
    </ul>
  </div>
  <div class="col-md-6">
    <div class="ratio ratio-16x9 rounded overflow-hidden shadow-sm">
      <iframe src="https://maps.google.com/maps?q=Logan%20UT&t=&z=13&ie=UTF8&iwloc=&output=embed"
        loading="lazy"></iframe>
    </div>
  </div>
</div>
