<!-- Hero -->
<header class="hero py-3 bg-white border-bottom mb-3">
  <div class="container text-center">
    <h1 class="fw-bold">Add New Entity
    </h1>
    <a href="/dashboard" class="btn btn-outline-secondary">
      <i class="bi bi-arrow-left"></i> Back to Dashboard
    </a>
  </div>
</header>

<%- include('./_partials/errorAlert') %>

  <!-- Form -->
  <form action="/entity/create" method="POST" class="card shadow-sm p-4">
    <div class="mb-3">
      <label class="form-label fw-semibold" for="subscription">Subscription</label>
      <select name="subscription" class="form-select" required id="subscription">
        <% subscriptions.forEach(sub=> { %>
          <option value="<%= sub.id %>" <%=data.id==sub.id ? 'selected' : '' %>>
            <%= sub.label %>
          </option>
          <% }) %>
      </select>
    </div>
    <div class="mb-3">
      <label class="form-label fw-semibold" for="orgName">Entity Name</label>
      <input type="text" name="orgName" class="form-control" required id="orgName"
        value="<%= data.orgName %>">
      <div class="small text-danger">
        <%= errors.find(err=> err.path === 'name')?.message %>
      </div>
    </div>
    <div class="mb-3">
      <label class="form-label fw-semibold" for="orgPhone">Phone Number</label>
      <input type="text" name="orgPhone" class="form-control" id="orgPhone" value="<%= data.orgPhone %>">
      <div class="small text-danger">
        <%= errors.find(err=> err.path === 'phone')?.message %>
      </div>
    </div>
    <hr class="my-4">

    <div class="text-end">
      <button type="submit" class="btn btn-primary">
        <i class="bi bi-check-lg me-1"></i> Add Entity
      </button>
    </div>
  </form>
  </div>
