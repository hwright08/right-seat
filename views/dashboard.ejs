<!-- Hero -->
<header class="hero py-3 bg-white border-bottom mb-3">
  <div class="container text-center">
    <h1 class="fw-bold">
      <%= currentEntity.name %>
    </h1>
    <div>
      <span
        class="badge border <%= currentEntity.subscription.key == 'enterprise' ? 'bg-purple-200 text-purple-500' : currentEntity.subscription.key == 'school' ? 'bg-success-subtle text-success' : currentEntity.subscription.key == 'single' ? 'bg-blue-200 text-blue-900' : 'bg-warning-subtle text-orange-500' %>">
        <%= currentEntity.subscription.label %>
      </span>
    </div>
  </div>
</header>


<!-- Stats -->
<div class="row g-3">
  <% if (userEntity.id==currentEntity.id && priv==='global' ) { %>
    <div class="col-6 col-xl">
      <div class="card hero-shadow h-100">
        <div class="card-body">
          <div class="text-secondary small">Entities</div>
          <div class="fs-2 fw-bold">
            <%= entities.length %>
          </div>
        </div>
      </div>
    </div>
    <% } %>
      <div class="col-6 col-xl">
        <div class="card hero-shadow h-100">
          <div class="card-body">

            <div class="text-secondary small">CFIs</div>
            <div class="fs-2 fw-bold">
              <%= cfiCount ?? 0 %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-6 col-xl">
        <div class="card hero-shadow h-100">
          <div class="card-body">
            <div class="text-secondary small">Active Students</div>
            <div class="fs-2 fw-bold">
              <%= studentCount ?? 0 %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-6 col-xl">
        <div class="card hero-shadow h-100">
          <div class="card-body">
            <div class="text-secondary small">Avg. Student Progress</div>
            <div class="fs-2 fw-bold text-success">TODO: 61%</div>
            <div class="progress small mt-2">
              <div class="progress-bar bg-success" style="width:61%"></div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-6 col-xl">
        <div class="card hero-shadow h-100">
          <div class="card-body">
            <div class="text-secondary small">First-Time Pass</div>
            <div class="fs-2 fw-bold">TODO: 79%</div>
          </div>
        </div>
      </div>
</div>

<!-- Entities -->
<% if (userEntity.id==currentEntity.id && priv==='global' ) { %>
  <div class="card shadow-sm h-100 mt-4">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
      <strong>Entities</strong>
      <div class="d-flex gap-2">
        <form class="input-group input-group-sm" style="max-width:300px" method="GET" action="/dashboard">
          <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
          <input class="form-control" id="entity" name="entity" placeholder="Search orgs…">
          <button class="btn btn-sm btn-outline-secondary text-nowrap" type="submit">
            Search
          </button>
        </form>
        <a class="btn btn-sm btn-outline-secondary text-nowrap" href="/entity/create">
          <i class="bi bi-plus"></i>
          New Entity
        </a>
      </div>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table align-middle">
          <thead class="small text-secondary">
            <tr>
              <th>Name</th>
              <th>CFIs</th>
              <th>Students</th>
              <th>Subscription</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% entities?.forEach(entity=> { %>
              <tr>
                <td>
                  <%= entity.name %>
                </td>
                <td>
                  <%= entity.cfiCount ?? 0 %>
                </td>
                <td>
                  <%= entity.studentCount ?? 0 %>
                </td>
                <td>
                  <span
                    class="badge border <%= entity.subscription?.key == 'enterprise' ? 'bg-purple-200 text-purple-500' : entity.subscription?.key == 'school' ? 'bg-success-subtle text-success' : entity.subscription?.key == 'single' ? 'bg-blue-200 text-blue-900' : 'bg-warning-subtle text-orange-500' %>">
                    <%= entity.subscription?.label %>
                  </span>
                </td>
                <td class="text-end">
                  <a class="btn btn-sm btn-outline-secondary" href="/dashboard/<%= entity.id %>">Manage</a>
                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <% } %>

    <div class="row g-3 mt-1">
      <!-- Manage CFIs -->
      <div class="col-xl-6">
        <div class="card shadow-sm h-100">
          <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <strong>CFIs</strong>
            <div class="d-flex gap-2">
              <form class="input-group input-group-sm" style="max-width:240px" method="GET"
                action="/dashboard/<%= currentEntity.id %>">
                <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                <input class="form-control" name="cfi" placeholder="Search CFIs…" id="cfiSearch">
                <button class="btn btn-sm btn-outline-secondary text-nowrap" type="submit">
                  Search
                </button>
              </form>
              <a class="btn btn-sm btn-outline-secondary text-nowrap"
                href="/entity/<%= currentEntity.id %>/user/create?type=cfi">
                <i class="bi bi-person-plus me-2"></i>
                Add CFI
              </a>
            </div>
          </div>
          <div class="card-body">
            <table class="table align-middle">
              <thead class="small text-secondary">
                <tr>
                  <th>Name</th>
                  <th>Students</th>
                  <th>Pass Rate</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% cfis.forEach(cfi=> { %>
                  <tr>
                    <td>
                      <%= cfi.firstName %>
                        <%= cfi.lastName %>
                    </td>
                    <td>
                      <%= students.filter(s=> s.cfiId === cfi.id).length %>
                    </td>
                    <td>TODO</td>
                    <td class="text-end">
                      <div class="btn-group btn-group-sm">
                        <a href="/dashboard/<%= currentEntity.id %>/user/<%= cfi.id %>"
                          class="btn btn-outline-secondary">Manage</a>
                      </div>
                    </td>
                  </tr>
                  <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <!-- Students -->
      <div class="col-xl-6">
        <div class="card shadow-sm h-100">
          <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <strong>Students</strong>
            <div class="d-flex gap-2">
              <form class="input-group input-group-sm" style="max-width:240px" method="GET"
                action="/dashboard/<%= currentEntity.id %>">
                <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                <input class="form-control" placeholder="Search students…" id="studentSearch" name="student">
                <button class="btn btn-sm btn-outline-secondary text-nowrap" type="submit">
                  Search
                </button>
              </form>
              <a class="btn btn-sm btn-outline-secondary text-nowrap"
                href="/entity/<%= currentEntity.id %>/user/create?type=student">
                <i class="bi bi-person-add me-2 "></i>
                Enroll Student
              </a>
            </div>
          </div>
          <div class="card-body">
            <table class="table align-middle">
              <thead class="small text-secondary">
                <tr>
                  <th>Student</th>
                  <th>Syllabus</th>
                  <th>CFI</th>
                  <th>Progress</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% students.forEach(student=> { %>
                  <tr>
                    <td>
                      <%= student.fullName %>
                    </td>
                    <td>
                      <!-- Syllabus -->
                    </td>
                    <td>
                      <!-- CFI -->
                    </td>
                    <td style="width:180px">
                      TODO
                      <!-- Progress -->
                      <!-- <div class="progress small">
                                            <div class="progress-bar bg-success" style="width:40%"></div>
                                        </div> -->
                    </td>
                    <td class="text-end">
                      <div class="btn-group btn-group-sm">
                        <a href="/dashboard/<%= currentEntity.id %>/user/<%= student.id %>" class="btn btn-outline-secondary">Manage</a>
                      </div>
                    </td>
                  </tr>
                  <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>


    <div class="row g-3 mt-1">
      <!-- Syllabus -->
      <div class="col-xl-6">
        <div class="card shadow-sm">
          <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <strong>Syllabuses</strong>
            <div class="d-flex gap-2">
              <!-- <button class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#uploadModal">
                              <i class="bi bi-upload me-2"></i>
                              Upload
                            </button> -->
              <a class="btn btn-sm btn-outline-secondary" href="/entity/<%= currentEntity.id %>/syllabus">
                <i class="bi bi-file-earmark-text me-2"></i>
                New Syllabus
              </a>
            </div>
          </div>
          <div class="card-body">
            <table class="table align-middle">
              <thead class="small text-secondary">
                <tr>
                  <th>Rating</th>
                  <th>Title</th>
                  <th>Version</th>
                  <th>Lessons</th>
                  <th>Last Updated</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% syllabuses.forEach(syllabus=> { %>
                  <td>
                    <%= syllabus.rating.label %>
                  </td>
                  <td>
                    <%= syllabus.title %>
                  </td>
                  <td>
                    <%= syllabus.version %>
                  </td>
                  <td>
                    <%= syllabus.lessonCount %>
                  </td>
                  <td>
                    <%= syllabus.updatedAt %>
                  </td>
                  <td class="text-end">
                    <button class="btn btn-sm btn-outline-secondary">Manage</button>
                  </td>
                  <% }) %>
              </tbody>
            </table>
          </div>
        </div>

      </div>

      <!-- Edit subscription -->
      <div class="col-xl-6">
        <% if (['global', 'admin' ].includes(priv)) { %>
          <div class="card hero-shadow h-100 shadow-sm">
            <form method="POST" action="/entity/<%= currentEntity.id %>/subscription">
              <div class="card-body">
                <label class="form-label fw-semibold" for="subscriptionId">Update Subscription</label>
                <select name="subscriptionId" class="form-select" required id="subscriptionId">
                  <% subscriptions.forEach(sub=> { %>
                    <option value="<%= sub.id %>" <%=currentEntity.subscription.id==sub.id ? 'selected' : '' %>>
                      <%= sub.label %>
                    </option>
                    <% }) %>
                </select>
              </div>
              <hr/>
              <div class="text-end pb-2 pe-2">
                <button type="submit" class="btn btn-primary">
                  <i class="bi bi-currency-dollar me-1"></i> Update Subscription
                </button>
              </div>
            </form>
          </div>
          <% } %>
      </div>
    </div>

    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const urlParams = new URLSearchParams(window.location.search);

        const entitySearch = urlParams.get('entity');
        const cfiSearch = urlParams.get('cfi');
        const studentSearch = urlParams.get('student');

        if (entitySearch) {
          const entityField = document.getElementById('entity');
          entityField.value = entitySearch;
        }

        if (cfiSearch) {
          const cfiInput = document.getElementById('cfiSearch');
          cfiInput.value = cfiSearch;
        }

        if (studentSearch) {
          const studentInput = document.getElementById('studentSearch');
          studentInput.value = studentSearch;
        }
      });
    </script>
