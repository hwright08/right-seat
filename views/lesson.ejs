

    <!-- Title + Back Link -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="h4 fw-bold lesson-header">
        <%= lesson.title %>
      </h1>
      <a href="/student/<%= profile.id %>" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to Syllabus
      </a>
    </div>

    <!-- Lesson Details -->
    <div class="card shadow-sm mb-4">
      <div class="card-body">

        <h5 class="card-section-title">Objective</h5>
        <p>
          <%= lesson.objective %>
        </p>

        <h5 class="card-section-title mt-4">Lesson Content</h5>
        <p><%= lesson.content %></p>

        <h5 class="card-section-title mt-4">Completion Requirement</h5>
        <p>
          <%= lesson.completion %>
        </p>
      </div>
    </div>

    <!-- CFI Interaction Section -->
    <div class="card shadow-sm">
      <div class="card-body">
        <h5 class="card-section-title">Instructor Notes & Status</h5>

        <form action="/student/<%= profile.id %>/lesson/<%= lesson.id %>" method="POST">

          <!-- Status -->
          <div class="mb-3">
            <label class="form-label fw-semibold">Lesson Status</label>
            <select name="status" class="form-select" <%= !['global', 'admin', 'cfi'].includes(user.privilege) ? 'disabled' : '' %> %>">
              <option value="not-started" <%= lesson?.userLesson?.status == 'not-started' ? 'selected' : '' %>>Not Started</option>
              <option value="in-progress" <%= lesson?.userLesson?.status == 'in-progress' ? 'selected' : '' %>>In Progress</option>
              <option value="completed" <%= lesson?.userLesson?.status == 'completed' ? 'selected' : '' %>>Completed</option>
            </select>
          </div>

          <!-- Notes -->
          <div class="mb-3">
            <label class="form-label fw-semibold">Instructor Notes</label>
            <textarea name="notes" class="form-control" rows="5" <%= !['global', 'admin', 'cfi'].includes(user.privilege) ? 'disabled' : '' %> %>"><%= lesson?.userLesson.notes %></textarea>
          </div>

          <% if (['global', 'admin', 'cfi'].includes(user.privilege)) { %>
          <div class="text-end">
            <button type="submit" class="btn btn-primary">
              <i class="bi bi-check-lg me-1"></i> Save Lesson
            </button>
          </div>
          <% } %>
        </form>
      </div>
    </div>
