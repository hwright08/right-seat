<!-- Stats -->
<div class="row g-3">
    <div class="col-6 col-xl-4">
        <div class="card hero-shadow h-100">
            <div class="card-body">
                <div class="text-secondary small">Entities</div>
                <div class="fs-2 fw-bold">
                    <%= entities.length %>
                </div>
            </div>
        </div>
    </div>
    <div class="col-6 col-xl-4">
        <div class="card hero-shadow h-100">
            <div class="card-body">
                <div class="text-secondary small">CFIs</div>
                <div class="fs-2 fw-bold">
                    <%= cfiCount ?? 0 %>
                </div>
            </div>
        </div>
    </div>
    <div class="col-6 col-xl-4">
        <div class="card hero-shadow h-100">
            <div class="card-body">
                <div class="text-secondary small">Active Students</div>
                <div class="fs-2 fw-bold">
                    <%= studentCount ?? 0 %>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Entities -->
<div class="card shadow-sm h-100 mt-4">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <strong>Entities</strong>
        <div class="d-flex gap-2">
            <form class="input-group input-group-sm" style="max-width:300px" method="GET" action="/dashboard">
                <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                <input class="form-control" id="search" name="search" placeholder="Search orgsâ€¦">
                <button class="btn btn-sm btn-outline-secondary text-nowrap" type="submit">
                    Search
                </button>
            </form>
            <button class="btn btn-sm btn-outline-secondary text-nowrap" data-bs-toggle="modal"
                data-bs-target="#newOrgModal">
                <i class="bi bi-plus"></i>
                New Organization
            </button>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table align-middle">
                <thead class="small text-secondary">
                    <tr>
                        <th>Name</th>
                        <th>CFIs</th>
                        <th>Students</th>
                        <th>Subscription</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% entities?.forEach(entity=> { %>
                        <tr>
                            <td>
                                <%= entity.name %>
                            </td>
                            <td>
                                <%= entity.cfiCount ?? 0 %>
                            </td>
                            <td>
                                <%= entity.studentCount ?? 0 %>
                            </td>
                            <td>
                                <span
                                    class="badge border <%= entity.subscription?.key == 'enterprise' ? 'bg-purple-200 text-purple-500' : entity.subscription?.key == 'school' ? 'bg-success-subtle text-success' : entity.subscription?.key == 'single' ? 'bg-blue-200 text-blue-900' : 'bg-warning-subtle text-orange-500' %>">
                                    <%= entity.subscription?.label %>
                                </span>
                            </td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-secondary" href="/dashboard/<%= entity.id %>">Manage</a>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal: New Entity-->
<div class="modal fade" id="newOrgModal" tabindex="-1">
    <div class="modal-dialog">
        <form class="modal-content" method="POST" action="/sign-up">
            <div class="modal-header">
                <h5 class="modal-title">Create Entity</h5>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label" for="subscription">Subscription</label>
                    <select class="form-select" id="subscription" name="subscription" required>
                        <% subscriptions?.forEach(sub => { %>
                            <option value="<%= sub.id %>">
                                <%= sub.label %>
                            </option>
                        <% }) %>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="orgName">Entity Name</label>
                    <input class="form-control" placeholder="e.g., Valley Aero Training" id="orgName" name="orgName" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="orgPhone">Entity Phone Number</label>
                    <input class="form-control" placeholder="e.g., Valley Aero Training" id="orgPhone" name="orgPhone">
                </div>
                <hr />
                <div class="mb-3">
                    <label class="form-label" for="firstName">Admin First Name</label>
                    <input class="form-control" placeholder="e.g., Valley Aero Training" id="firstName" name="firstName" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="lastName">Admin Last Name</label>
                    <input class="form-control" placeholder="e.g., Valley Aero Training" id="lastName" name="lastName" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="email">Admin Email</label>
                    <input class="form-control" placeholder="e.g., Valley Aero Training" id="email" name="email" required>
                </div>
                <input type="hidden" value="2" name="privilegeId" />
            </div>
            <div class="modal-footer">
                <button class="btn btn-outline-secondary" data-bs-dismiss="modal" type="button">
                    Cancel
                </button>
                <button class="btn btn-rs" type="submit">
                    Create
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const urlParams = new URLSearchParams(window.location.search);
        const searchValue = urlParams.get('search');

        if (searchValue) {
            const searchField = document.getElementById('search');
            searchField.value = searchValue;
        }
    })
</script>
