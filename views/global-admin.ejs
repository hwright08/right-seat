<!-- Modal: New Organization -->
<div class="modal fade" id="newOrgModal" tabindex="-1">
    <div class="modal-dialog">
        <form class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Organization</h5>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Org Name</label>
                    <input class="form-control" placeholder="e.g., Valley Aero Training">
                </div>
                <div class="mb-3">
                    <label class="form-label">Plan</label>
                    <select class="form-select">
                        <option>Trial</option>
                        <option>Single</option>
                        <option>Flight School</option>
                        <option>Enterprise</option>
                    </select>
                </div>
                <div class="form-check">
                    <input class="form-check-input" id="enableSSO" type="checkbox">
                    <label class="form-check-label" for="enableSSO">Enable SSO</label>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-outline-secondary" data-bs-dismiss="modal" type="button">
                    Cancel
                </button>
                <button class="btn btn-rs" type="button">
                    Create
                </button>
            </div>
        </form>
    </div>
</div>
