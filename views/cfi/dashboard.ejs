  <script>
    const toastEl = document.getElementById('toast');
    const toast = new bootstrap.Toast(toastEl, { delay: 2200 });

    document.getElementById('saveQuickLog')?.addEventListener('click', () => toast.show());
    document.getElementById('saveLesson')?.addEventListener('click', () => {
      toastEl.querySelector('.toast-body').textContent = 'Lesson logged.';
      toast.show();
      const modal = bootstrap.Modal.getInstance(document.getElementById('logLessonModal'));
      modal?.hide();
    });
    document.getElementById('shareNow')?.addEventListener('click', () => {
      toastEl.classList.remove('text-bg-success');
      toastEl.classList.add('text-bg-primary');
      toastEl.querySelector('.toast-body').textContent = 'Syllabus shared.';
      toast.show();
      const modal = bootstrap.Modal.getInstance(document.getElementById('shareModal'));
      modal?.hide();
      setTimeout(() => {
        toastEl.classList.remove('text-bg-primary');
        toastEl.classList.add('text-bg-success');
      }, 2600);
    });
  </script>
