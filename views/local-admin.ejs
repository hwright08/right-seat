                                <td>82%</td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        <button class="btn btn-outline-secondary">Edit</button>
                                        <button class="btn btn-outline-secondary">Deactivate</button>
                                    </div>
