<!-- Hero -->
<header class="hero py-3 bg-white border-bottom mb-3">
  <div class="container text-center">
    <h1 class="fw-bold">
      <% if (data.id) { %>
        Edit
      <% } else { %>
        Add New
      <% } %>
      <%= type %>
    </h1>
    <a href="/entity/<%= currentEntity.id %>" class="btn btn-outline-secondary">
      <i class="bi bi-arrow-left"></i> Back to Dashboard
    </a>
  </div>
</header>

<%- include('./_partials/errorAlert') %>

<!-- Form -->
<form action="/user/<%= data.id ? `${data.id}/update` : 'create' %>" method="POST" class="card shadow-sm p-4">
  <div class="row g-3">
    <div class="col-md-6">
      <div class="mb-3">
        <label class="form-label fw-semibold" for="firstName">First Name</label>
        <input type="text" name="firstName" class="form-control" required id="firstName" value="<%= data.firstName %>">
        <div class="small text-danger">
          <%= errors.find(err=> err.path === 'firstName')?.message %>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label fw-semibold" for="lastName">Last Name</label>
        <input type="text" name="lastName" class="form-control" required id="lastName" value="<%= data.lastName %>">
        <div class="small text-danger">
          <%= errors.find(err=> err.path === 'lastName')?.message %>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label fw-semibold" for="email">Email</label>
        <input type="email" name="email" class="form-control" required id="email" value="<%= data.email %>">
        <div class="small text-danger">
          <%= errors.find(err=> err.path === 'email')?.message %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="mb-3">
        <% if (type == 'STUDENT') { %>
          <label for="cfiId" class="form-label fw-semibold">CFI</label>
          <select name="cfiId" class="form-select" required id="cfiId">
            <option value="">— Select —</option>
            <% cfis.forEach(cfi => { %>
              <option value="<%= cfi.id %>" <%= data.cfiId == cfi.id ? 'selected' : '' %>><%= cfi.fullName %></option>
              <% }) %>
          </select>
          <label for="syllabusId" class="form-label fw-semibold">Enrolled Syllabus</label>
          <select name="syllabusId" class="form-select" required id="syllabusId">
            <option value="">— Select —</option>
            <% syllabi.forEach(syllabus => { %>
              <option value="<%= syllabus.id %>" <%= data.syllabusId == syllabus.id ? 'selected' : '' %>><%= syllabus.title %> - Version <%= syllabus.version %></option>
              <% }) %>
          </select>
          <% } %>
        <label class="form-label fw-semibold" for="ratings">Completed Ratings</label>
        <select name="ratings[]" class="form-select" multiple id="ratings">
          <% ratings.forEach(rating=> { %>
            <option value="<%= rating.id %>" <%= data.ratings?.includes(rating.id.toString()) ? 'selected' : '' %>>
              <%= rating.label %>
            </option>
            <% }) %>
        </select>
        <div class="form-text">Hold Ctrl/Cmd to select multiple ratings.</div>
        <div class="small text-danger">
          <%= errors.find(err=> err.path === 'ratings')?.message %>
        </div>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="hasGoldSeal" name="hasGoldSeal" <%= data?.hasGoldSeal ? 'checked' : '' %> value="true">
        <label class="form-check-label" for="hasGoldSeal">Has Gold Seal</label>
        <div class="small text-danger">
          <%= errors.find(err=> err.path === 'firstName')?.hasGoldSeal %>
        </div>
      </div>
    </div>
  </div>

  <input type="hidden" name="type" value="<%= type %>">
  <input type="hidden" name="entityId" value="<%= currentEntity.id %>">
  <hr class="my-4">

  <div class="text-end">
    <button type="submit" class="btn btn-primary">
      <i class="bi bi-check-lg me-1"></i>
      <% if (data.id) { %>
        Edit
        <% } else { %>
        Add
        <% } %>
          <%= type %>
    </button>
  </div>
</form>
</div>
