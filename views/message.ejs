<!-- Hero -->
<header class="hero py-5 py-lg-6">
  <div class="container">
    <h1 class="fw-bold mb-1">Message #<%= message.id %></h1>
    <div class="small text-secondary">
      Received: <%= new Date(message.createdAt).toLocaleString() %>
        · Updated: <%= new Date(message.updatedAt).toLocaleString() %>
    </div>
  </div>
</header>

<main class="container my-5">
  <div class="card shadow-sm mb-3">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-start">
        <div>
          <h1 class="h4 fw-bold mb-1">Message #<%= message.id %>
          </h1>
        </div>
        <div class="d-flex gap-2">
          <a class="btn btn-outline-secondary btn-sm" href="mailto:<%= message.email %>"><i
              class="bi bi-envelope me-1"></i>Email</a>
          <form action="/global/message/<%= message.id %>/resolve" method="post">
            <button class="btn btn-success btn-sm" type="submit">Mark Resolved</button>
          </form>
          <form action="/global/message/<%= message.id %>/delete" method="post">
            <button class="btn btn-outline-danger btn-sm" type="submit">Delete</button>
          </form>
        </div>
      </div>

      <hr>
      <div class="row g-3">
        <div class="col-md-6">
          <div class="mb-2"><span class="text-secondary small d-block">Type</span>
            <% if ((message.type || '' ).toLowerCase()==='sales' ) { %>
              <span class="badge bg-primary-subtle text-primary border">Sales</span>
              <% } else { %>
                <span class="badge bg-secondary-subtle text-secondary border">Support</span>
                <% } %>
          </div>
          <div class="mb-2"><span class="text-secondary small d-block">Contact Name</span>
            <div class="fw-semibold">
              <%= message.contactName || '—' %>
            </div>
          </div>
          <div class="mb-2"><span class="text-secondary small d-block">Email</span>
            <div><a href="mailto:<%= message.email %>">
                <%= message.email %>
              </a></div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="mb-2"><span class="text-secondary small d-block">Organization</span>
            <div class="fw-semibold">
              <%= (message.type || '' ).toLowerCase()==='sales' ? (message.orgName || '—' ) : '—' %>
            </div>
          </div>
          <div class="mb-2"><span class="text-secondary small d-block">Message ID</span>
            <div class="fw-semibold">
              <%= message.id %>
            </div>
          </div>
        </div>
      </div>

      <div class="mt-3">
        <span class="text-secondary small d-block mb-1">Message</span>
        <textarea disabled class="p-3 border rounded bg-white w-100" rows="10">
          <%= message.message %>
        </textarea>
      </div>
    </div>
  </div>

  <a href="/dashboard" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Back to Dashboard</a>
  </div>
</main>
